generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Apps {
  id              Int     @id @default(autoincrement())
  name            String
  icon            String?
  lastVersion     String?
  lastPkgSize     Int?
  lastPkgId       Int?
  description     String?
  deviceType      String
  slug            String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  packagesCount   Int? @default(0)
  userId          Int
  archived        Boolean @default(false)
  @@unique([slug, deviceType])
}

model Packages {
  id           Int     @id @default(autoincrement())
  appId        Int?
  name         String?
  icon         String?
  bundleId     String?
  version      String?
  buildVersion String?
  changelog    String?
  file         String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  size         Int? @default(0)
  userId       Int
}

model Settings {
  id          Int     @id @default(autoincrement())
  key         String
  value       String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  @@index([key], name: "index_settings_on_key")
}

model Account {
  id                 Int     @id @default(autoincrement())
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  idToken            String?
  session_state      String?
  oauth_token_secret String?
  oauth_token        String?

  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId Int

  @@unique([provider, providerAccountId])
}

model User {
  id            Int       @id @default(autoincrement())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
}
